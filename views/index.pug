extends layout

mixin space()
  | !{' '}

block content
    h1= title
    h3 #{title} is a solution to Toronto's food waste problem

    div.welcome-description
        p All about Waste not Now

    form(method="post")
        span Name
        +space
        input(for="username" type="text" name="username" required)
        br
        span Email
        +space
        input(type="email" name="email" required)
        br
        input(type="submit")
        br
        span #{errors}
        span #{success}
